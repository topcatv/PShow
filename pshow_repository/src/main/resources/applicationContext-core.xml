<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd"
	default-lazy-init="true">

	<description>核心服务配置</description>

	<!-- 启动时加载内容定义 -->
	<bean class="org.pshow.repo.ContentScheamBootstrap" init-method="onBootstrap"
		lazy-init="false">
		<property name="definitions">
			<list>
				<value>org/pshow/repo/datamodel/content/definition/datatype.xml</value>
				<value>file:${schema.definition.location}/*.xml</value>
			</list>
		</property>
	</bean>

	<bean id="contentService" class="org.pshow.repo.service.ContentServiceImpl">
	</bean>
</beans>